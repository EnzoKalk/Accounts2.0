<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="SelectionSwitch">
        <item name="android:textColorPrimaryDisableOnly">#000000</item>
        <item name="android:colorControlActivated">#FF7D27</item>
        <item name="android:colorForeground">#000000</item>
    </style>

    <style name="MyDarkToolbarStyle">
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>
