<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".EditActivity"
    tools:showIn="@layout/activity_edit">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/linLayAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/nameRelLayAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_color"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/nameAddEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:autofillHints=""
                    android:ems="10"
                    android:hint="@string/nameAddHint"
                    android:inputType="textPersonName"
                    android:shadowColor="#81FFFFFF"
                    android:textColor="@android:color/white"
                    android:textColorHighlight="#01A0B8"
                    android:textColorHint="#81FFFFFF"
                    android:textColorLink="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:theme="@style/inputField"
                    tools:targetApi="o" />

                <ImageView
                    android:id="@+id/errorAddName"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="12dp"
                    android:baselineAlignBottom="false"
                    android:contentDescription="@string/errorAddUser"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/warning" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>