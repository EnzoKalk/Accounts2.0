<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="@color/colorPrimary"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/nameApp"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="6dp"
        android:fontFamily="@font/fredoka_one"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/nameApp"
        android:textAlignment="center"
        android:textColor="#00BCD4"
        android:textSize="36sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameApp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:contentDescription="@string/imageApp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:srcCompat="@drawable/app" />

    <EditText
        android:id="@+id/userApp"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageApp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="12dp"
        android:autofillHints=""
        android:background="@drawable/rounded"
        android:backgroundTint="@android:color/white"
        android:ems="16"
        android:hint="@string/userAppHint"
        android:inputType="textPersonName"
        android:textAlignment="center"
        tools:targetApi="o" />

    <EditText
        android:id="@+id/passApp"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/userApp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:autofillHints=""
        android:background="@drawable/rounded"
        android:backgroundTint="@android:color/white"
        android:ems="16"
        android:hint="@string/passAppHint"
        android:inputType="textPassword"
        android:textAlignment="center"
        tools:targetApi="o" />

    <Switch
        android:id="@+id/flagApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/authButton"
        android:layout_alignRight="@id/nameApp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="64dp"
        android:text="Ricordami"
        android:textColor="#FF7D27"
        android:textStyle="bold|italic"
        android:theme="@style/SelectionSwitch" />

    <TextView
        android:id="@+id/signText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/authButton"
        android:layout_alignLeft="@id/nameApp"
        android:layout_marginLeft="107dp"
        android:layout_marginTop="15dp"
        android:text="Registrati"
        android:textColor="#FF7D27"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/authButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/passApp"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded"
        android:backgroundTint="#FF8737"
        android:fontFamily="@font/fredoka_one"
        android:text="Login"
        android:textAlignment="center" />
</RelativeLayout>