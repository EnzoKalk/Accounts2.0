<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/editUserLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_popup"
    tools:context=".ProfileActivity">

    <EditText
        android:id="@+id/userEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/userHint"
        android:inputType="textPersonName"
        android:textColor="@color/rightText"
        android:textSize="16sp"
        android:theme="@style/inputField"
        tools:targetApi="o" />

    <ImageView
        android:id="@+id/userEditImage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/userEditText"
        android:layout_alignBottom="@+id/userEditText"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:contentDescription="@string/userImage"
        android:src="@drawable/user" />

    <Button
        android:id="@+id/saveUsrEditButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/userEditText"
        android:background="@color/transparent"
        android:text="@string/saveButton"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="normal" />

</RelativeLayout>